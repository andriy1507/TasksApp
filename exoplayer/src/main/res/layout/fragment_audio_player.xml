<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/spacing_1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_4dp"
        android:layout_marginBottom="@dimen/spacing_24dp"
        android:src="@color/colorSecondary"
        app:layout_constraintBottom_toTopOf="@id/timeProgressBar"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/currentTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_12dp"
        android:layout_marginTop="@dimen/spacing_8dp"
        android:text="00:35"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="@id/timeProgressBar"
        app:layout_constraintTop_toBottomOf="@id/timeProgressBar" />

    <ProgressBar
        android:id="@+id/timeProgressBar"
        android:layout_width="match_parent"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_16dp"
        android:layout_marginBottom="@dimen/spacing_12dp"
        android:progress="35"
        android:progressTint="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@id/playButton" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_8dp"
        android:layout_marginEnd="@dimen/spacing_12dp"
        android:text="01:24"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="@id/timeProgressBar"
        app:layout_constraintTop_toBottomOf="@id/timeProgressBar" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/fastRewindButton"
        android:layout_width="@dimen/spacing_48dp"
        android:layout_height="@dimen/spacing_48dp"
        android:layout_marginEnd="@dimen/spacing_16dp"
        android:background="@android:color/transparent"
        android:padding="@dimen/spacing_12dp"
        android:src="@drawable/ic_rewind"
        android:tint="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="@id/playButton"
        app:layout_constraintEnd_toStartOf="@id/playButton"
        app:layout_constraintTop_toTopOf="@id/playButton" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/playButton"
        android:layout_width="@dimen/spacing_48dp"
        android:layout_height="@dimen/spacing_48dp"
        android:layout_marginBottom="@dimen/spacing_24dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_play"
        android:tint="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/buttonFastForward"
        android:layout_width="@dimen/spacing_48dp"
        android:layout_height="@dimen/spacing_48dp"
        android:layout_marginStart="@dimen/spacing_16dp"
        android:background="@android:color/transparent"
        android:padding="@dimen/spacing_12dp"
        android:src="@drawable/ic_forward"
        android:tint="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="@id/playButton"
        app:layout_constraintStart_toEndOf="@id/playButton"
        app:layout_constraintTop_toTopOf="@id/playButton" />
</androidx.constraintlayout.widget.ConstraintLayout>